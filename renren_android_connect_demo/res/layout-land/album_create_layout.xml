<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10dip"
	android:background="@color/main_bg" android:scrollbars="vertical">
	<LinearLayout android:layout_width="220dip"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:layout_marginRight="10dip">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_marginBottom="5dip">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="相册名称"
				android:textSize="14sp" android:textColor="#333333"
				android:layout_marginRight="5dip" />
			<EditText android:id="@+id/renren_demo_create_album_name"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:singleLine="true" android:padding="3dip"
				android:background="@drawable/renren_edit_text_bg" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_marginBottom="5dip">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="相册地点"
				android:textColor="#333333" android:textSize="14sp"
				android:layout_marginRight="5dip" />
			<EditText android:id="@+id/renren_demo_create_album_location"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:singleLine="true" android:padding="3dip"
				android:background="@drawable/renren_edit_text_bg" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_marginBottom="5dip">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="相册描述"
				android:textColor="#333333" android:textSize="14sp"
				android:layout_marginRight="5dip" />
			<EditText android:id="@+id/renren_demo_create_album_description"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:singleLine="true" android:padding="3dip"
				android:background="@drawable/renren_edit_text_bg" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="浏览权限"
				android:textColor="#333333" android:textSize="14sp"
				android:layout_marginRight="5dip" />
			<Spinner android:id="@+id/renren_demo_album_view_privilege"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</LinearLayout>
		<Button android:id="@+id/renren_demo_create_album_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="创建" android:textSize="14sp" android:textColor="#000000"
			android:layout_marginTop="10dip" android:layout_gravity="right" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="返回结果"
			android:textColor="#333333" android:textSize="16sp" />
		<EditText android:id="@+id/renren_demo_create_album_result"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:lines="12" android:padding="3dip" android:textColor="#000000"
			android:gravity="top" android:editable="false" android:textSize="14sp"
			android:scrollbars="vertical" android:background="@drawable/renren_edit_text_bg" />
	</LinearLayout>
</LinearLayout>